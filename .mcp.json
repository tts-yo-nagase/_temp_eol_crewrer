{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "microsoft.docs.mcp": {
      "command": "npx",
      "args": ["-y", "mcp-remote","https://learn.microsoft.com/api/mcp/"]
    },
    "deepwiki":{
      "type":"sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "context7":{
      "type":"sse",
      "url": "https://mcp.context7.com/sse"
    }
  }
}
