{
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend start\" \"pnpm --filter frontend run dev\"",
    "setup": "bash scripts/setup.sh",
    "setup:env": "bash scripts/setup-env.sh",
    "setup:db": "docker compose up -d postgres && bash scripts/wait-for-db.sh",
    "cleanup": "bash scripts/cleanup.sh",
    "lint": "pnpm --filter backend run lint && pnpm --filter frontend run lint",
    "test": "pnpm --filter backend run test && pnpm --filter frontend run test",
    "prisma:generate": "prisma generate --schema=./backend/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./backend/prisma/schema.prisma",
    "prisma:seed": "ts-node --transpile-only backend/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.9.2",
    "concurrently": "^9.2.1",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "schema": "./prisma/schema.prisma"
  }
}
    